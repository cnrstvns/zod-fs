{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "ES2020"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "outDir": "dist",
    "paths": {
      "@zod-fs/*": ["src/*"]
    },
    "baseUrl": ".",
    "declaration": true
  },
  "exclude": ["node_modules", "test"]
}
